<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mypharmapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EventDetailsActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation" />

        <activity android:name=".AllEventsActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>

        <activity android:name=".VisitActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>

        <activity android:name=".EventActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>

        <activity android:name=".PharmacyDetailsActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>

        <activity android:name=".PharmacyActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".DailyPlanActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>

        <activity android:name=".CalenderViewActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".SearchActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>

        <activity android:name=".MainActivity" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />
    </application>



</manifest>